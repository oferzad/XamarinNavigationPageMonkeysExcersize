<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PageNavigationMonkeys.ShowMonkeyPage">
    <ContentPage.Content>
        
            <StackLayout>
                <Label Text="{Binding Name}" HorizontalTextAlignment="Center" FontSize="Large"/>
                <Image Source="{Binding ImageUrl}" WidthRequest="400" HeightRequest="400"/>
            <Label Text="{Binding Location}" HorizontalTextAlignment="Center" FontSize="Caption"/>
            <Label Text="{Binding Details}" HorizontalTextAlignment="Center" FontSize="Body"/>
            </StackLayout>
        
    </ContentPage.Content>
</ContentPage>